{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // Config. for python code formating

  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.autoIndent": "full",
    "editor.detectIndentation": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "editor.autoIndent": "full",

  "workbench.startupEditor": "newUntitledFile",
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorStyle": "block",
  "editor.suggestSelection": "first",
  "[python]": {
    // "editor.defaultFormatter": "ms-python.python"

    "editor.defaultFormatter": "charliermarsh.ruff",
  },
  "python.formatting.blackArgs": ["--line-length", "80"],
  "python.languageServer": "Pylance",


  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "http.proxySupport": "off",
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "security.workspace.trust.untrustedFiles": "open",
  "workbench.colorTheme": "Vague",
  "editor.minimap.enabled": false,
  "workbench.layoutControl.enabled": false,
  "workbench.navigationControl.enabled": false,
  "chat.commandCenter.enabled": false,
  "window.commandCenter": false,
  "vim.cursorStylePerMode.insert": "block",
  "vim.cursorStylePerMode.normal": "block",
  "vim.cursorStylePerMode.replace": "underline",
  "vim.leader": " ",
  "vim.mouseSelectionGoesIntoVisualMode": false,
  "i18n-ally.sourceLanguage": "fr",
  "i18n-ally.displayLanguage": "fr",
  "gitlens.views.scm.grouped.views": {
    "commits": true,
    "branches": true,
    "remotes": true,
    "stashes": true,
    "tags": true,
    "worktrees": true,
    "contributors": true,
    "fileHistory": false,
    "repositories": true,
    "searchAndCompare": true,
    "launchpad": false
  },
  "gitlens.views.showRelativeDateMarkers": false
}
